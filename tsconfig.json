{
    "compilerOptions": {
        "outDir": "dist/main",
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/renderer/*"],
            "@/*": ["./src/renderer/*"]
        },
        "types": ["@types/node", "@nuxt/types"]
    },
    "exclude": [
      "node_modules"
    ]
}
